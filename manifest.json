{
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "name": "Remote Media Control",
  "version": "0.1",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
  "default_popup": "popup.html"
}
}
