{
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "name": "Media Remote Control",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.youtube.in/*",
    "*://*.youtube.co.uk/*",
    "*://*.netflix.com/*",
    "*://*.netflix.in/*",
    "*://*.primevideo.com/*",
    "*://*.primevideo.in/*",
    "*://*.hotstar.com/*",
    "*://*.hotstar.in/*",
    "*://*.vimeo.com/*",
    "*://*.sonyliv.com/*",
    "*://*.sonyliv.in/*",
    "*://*.jiosaavn.com/*",
    "*://*.music.apple.com/*",
    "*://*.mxplayer.com/*",
    "*://*.mxplayer.in/*",
    "*://*.music.amazon.com/*",
    "*://*.music.amazon.in/*",
    "*://*.music.amazon.co.uk/*",
    "*://*.spotify.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtube.in/*",
        "*://*.youtube.co.uk/*",
        "*://*.netflix.com/*",
        "*://*.netflix.in/*",
        "*://*.primevideo.com/*",
        "*://*.primevideo.in/*",
        "*://*.hotstar.com/*",
        "*://*.hotstar.in/*",
        "*://*.vimeo.com/*",
        "*://*.sonyliv.com/*",
        "*://*.sonyliv.in/*",
        "*://*.jiosaavn.com/*",
        "*://*.music.apple.com/*",
        "*://*.mxplayer.com/*",
        "*://*.mxplayer.in/*",
        "*://*.music.amazon.com/*",
        "*://*.music.amazon.in/*",
        "*://*.music.amazon.co.uk/*",
        "*://*.spotify.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128" : "logo.png"
  }
}