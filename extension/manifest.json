{
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "name": "Media Remote Control",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "offscreen",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*.hotstar.com/*",
        "*://*.vimeo.com/*",
        "*://*.sonyliv.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128" : "logo.png"
  }
}